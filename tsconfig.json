{
  "compilerOptions": {
    "target": "es2020",
    "lib": [
      "es6",
      "dom",
      "es2020"
    ],
    "strict": true,
    "moduleResolution": "bundler",
    "noImplicitAny": false,
    "allowJs": true,
    "typeRoots": [
      "./node_modules/@types",
      "./node_modules/@figma",
      "./node_modules/@vueuse"
    ],
    "paths": {
      "@/*": [
        "./src/ui/*"
      ]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.vue"
  ]
}